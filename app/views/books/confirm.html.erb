<div class="container">
  <div class="row justify-content-center">
    <h1>下書き一覧</h1>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th></th>
          <th>タイトル</th>
          <th>概要</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      <% @books.each do |book| %>
        <tr>
          <td>
          <%= link_to user_path(book.user.id) do %>
            <%= image_tag book.user.get_profile_image(80,80) %>
          <% end %>
          </td>
          <td><%= link_to book_path(book.id) do %>
                <%= book.title %>
              <% end %>
          </td>
          <td><%= book.body %></td>
          <td>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>