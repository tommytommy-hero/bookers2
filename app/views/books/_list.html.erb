
<div class="col-md-3">
  <h2>User info</h2>
  <p><%= image_tag user.get_profile_image(100,100) %></p>
  <table class="table">
    <tbody>
      <tr></tr>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
      <tr>
        <th>follows</th>
        <th id="followings-count_<%= user.id %>">
          <%= link_to "#{ user.followings.count}", user_followings_path(user.id) %>
        </th>
      </tr>
      <tr>
        <th>followers</th>
        <th id="followers-count_<%= user.id %>">
          <%= link_to "#{ user.followers.count}", user_followers_path(user.id) %>
        </th>
      </tr>
    </tbody>
  </table>
  <div class="row">
    <% if user == current_user %>
      <%= link_to edit_user_path(user),class:"btn btn-outline-secondary btn-block" do %>
      <i class="fas fa-user-cog"></i>
      <% end %>
    <% else %>
      <div id="follow-btn_<%= user.id %>">
        <%= render "relationships/followbtn", user: user %>
      </div>
    <% end %>
  </div>

  <h2 class="mt-3">New book</h2>
  <%= render 'books/form', book: book %>
</div>