<div class="container">
 <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
   <h1>編集ページ</h1>

   <% if @book.errors.any? %>
   <h3><%= @book.errors.count %> errors prohibited this book from being saved:</h3>
   <ul>
    <% @book.errors.full_messages.each do |message| %>
     <li><%= message %></li>
    <% end %>

   </ul>
   <% end %>
   <div class="updateline">
    <%= form_with model:@book do |f| %>

    <div class="form-group">
     <h4>Title</h4>
     <%= f.text_field :title ,class: "form-control" %>
    </div>

    <div class="form-group">
     <h4>Opinion</h4>
     <%= f.text_area :body ,class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.select :status, Book.statuses.keys.map { |k| [t("enums.book.status.#{k}"), k]}, {}, {class: "custom-select w-25"} %>
    </div>
    <div class="form-group">
     <%= f.submit '更新する', class: "btn btn-success" %>
    </div>
    <% end %>

   </div>
   <%= link_to "閲覧", book_path(@book) %>
   |
   <%= link_to "一覧", books_path %>
  </div>
 </div>
</div>
