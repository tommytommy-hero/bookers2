
<div class="container">
 <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

   <h2>User info</h2>
   <% if @user.errors.any? %>
    <h3><%= @user.errors.count %>errors prohibited this obj from being saved:</h3>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
     <li><%= message %></li>
    <% end %>
    </ul>
   <% end %>

   <div class="list-wrap"></div>
     <%= form_with model:@user do |f| %>
     <div class="form-group">
      <label for="text">Name</label>
      <%= f.text_field :name, class: "form-control" %>
     </div>
     <div class="form-group">
       <label for="image">Image</label>
      <%= f.file_field :profile_image, accept:"image/*" %>
     </div>
     <div class="form-group">
      <label for="text">Introduction</label>
      <%= f.text_field :introduction, class: "form-control" %>
     </div>
     <div class="form-group">
      <%= f.submit "Update User", class: "btn btn-secondary" %>
     </div>
     <% end %>
   </div>
  </div>
 </div>
</div>


